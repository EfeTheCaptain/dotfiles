ctrl + shift + F12
	amixer -q set Master 4%+  # Increase volume

ctrl + shift + F11
	amixer -q set Master 5%-  # Decrease volume



ctrl + shift + F5
	brightnessctl -d intel_backlight s +5%

ctrl + shift + F4
	brightnessctl -d intel_backlight s 5%-


ctrl + shift + F3
 	feh --bg-fill --randomize /home/efe/img/AI_Images/	


ctrl + alt + Right
	cmus-remote -n

ctrl + alt + Left
	cmus-remote -p

ctrl + alt + space
	cmus-remote -u

ctrl + alt + Up
	cmus-remote -v +5

ctrl + alt + Down
	cmus-remote -v -5



